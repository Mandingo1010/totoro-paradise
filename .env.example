# Totoro Paradise 环境变量配置示例
# 复制此文件为 .env 并根据需要修改

# 运行环境
NODE_ENV=production

# 服务器配置
PORT=3000
HOST=0.0.0.0

# API配置
NUXT_PUBLIC_API_BASE=/api
NUXT_PUBLIC_TOTORO_SERVER=https://app.xtotoro.com

# 自由跑功能配置
FREERUN_API_TIMEOUT=30000
FREERUN_MAX_RETRIES=3
FREERUN_RETRY_DELAY=1000

# 批量执行配置
FREERUN_MAX_BATCH_COUNT=10
FREERUN_MIN_BATCH_INTERVAL=60000
